<h3> Editar empresa</h3>
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/contratos/empresas/edit" method="POST">
        <input type="hidden" name="id" value="{{empresa._id}}">
            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome da empresa." class="form-control" value="{{empresa.razao_social}}"> </br>
            <label for="cnpj"> CNPJ: </label>
            <input type="text" id="cnpj" name="cnpj" placeholder="CNPJ da empresa." class="form-control" value="{{empresa.cnpj}}" data-mask="00.000.000/0000-00"></br>
            <label for="cnpj"> E-mail: </label>
            <input type="text" id="email" name="email" placeholder="E-mail para contato." class="form-control" value="{{empresa.email}}"></br>
            <button type="submit" class="btn btn-success">Salvar</button>
        </form>
    </div>
</div>