<h3> Adicionar usuário </h3>
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/usuarios/edit" method="POST">
            <input type="hidden" name="id" value="{{usuario.id}}">
            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome completo do usuário." class="form-control" required value="{{usuario.nome}}"> </br>
            <label for="matricula"> Matrícula Siape: </label>
            <input type="text" id="matricula" name="matricula" placeholder="Matrícula do siape." class="form-control" required value="{{usuario.matricula}}"></br>
            <label for="cnpj"> E-mail: </label>
            <input type="text" id="email" name="email" placeholder="E-mail para contato." class="form-control" required value="{{usuario.email}}"></br>
            <label for="senha">Password</label>
            <input type="password" class="form-control" id="senha" name="senha" placeholder="Password" required value="{{usuario.senha}}" disabled></br>
            
            <label for="perfil">Perfil</label>
            <select name="perfil" class="form-control">
                <option value="8">Selecione um perfil</option>
                <option value="0">Técnico</option>
                <option value="1">Admin</option>
            </select>
            </br>
            <label for="status" >Status: </label><br>
            <div class="form-control">
                <input type="radio" name="status" value="true" class="radio-inline" checked> Ativo
                <input type="radio" name="status" value="false" class="radio-inline"> Inativo 
            </div>
            </br>
            <button type="submit" class="btn btn-success">Editar</button>
        </form>
    </div>
</div>