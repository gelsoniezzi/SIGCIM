<h2> Lista de Empresas</h2>
<hr>
<table class="table table-striped table-striped">
    <thead class="thead-dark">
        <tr>
        <th scope="col">Nome</th>
        <th scope="col">CNPJ</th>
        <th scope="col">E-mail</th>
        <th scope="col">Ações</th>
        </tr>
    </thead>
    
    <tbody>
        {{#each empresas}}
            <tr>
            <td>{{razao_social}}</td>
            <td>{{cnpj}}</td>
            <td>{{email}}</td>
            <td>
                
                <form action="/adminContratos/empresas/delete/" method="POST">
                    <a href="/adminContratos/empresas/edit/{{_id}}"><i class="material-icons">edit</i></a>
                    <input type="hidden" name="id" value="{{_id}}">                    
                    <button class="btn btn-link" type="submit"><i class="material-icons">clear</i></button>
                </form>
            </td>
            </tr>

        {{else}}
            <tr><td><h5>Nenhuma empresa cadastrada.</h5></td><td><td><td></td></td></td></tr>
        {{/each}}
    </tbody>
    
</table>

<a href="/adminContratos/empresas/add"><button class="btn btn-success"> NOVA </button></a>