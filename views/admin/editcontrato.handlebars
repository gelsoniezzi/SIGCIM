<div class="card">
    <div class="card-body">
        <form action="/adminContratos/contratos/edit" method="POST">
            <input type="hidden" name="id" value="{{contrato._id}}">
            <label for="numero">Numero/Ano: </label>
            <input type="text" id="numero" name="numero" placeholder="Numero do contrato: 003/2019" class="form-control" required value="{{contrato.numero}}> </br>
            <label for="empresa">Empresa: </label>
            <select name="empresa" class="form-control">
                <option value="0">Selecione uma empresa.</option>
                {{#each empresas}}
                <option value="{{_id}}" {{#if contrato.empresa._id}}selected{{else}} {{/if}}>{{razao_social}}</option>
                {{else}}
                <option value="0">Nenhuma empresa registrada.</option>
                {{/each}}
            </select>
            <br>
            <label for="fator_reducao">Fator de redução: </label>
            <input type="text" id="fator_reducao" name="fator_reducao" placeholder="Fator de redução" class="form-control" required value="{{contrato.fator_reducao}}"></br>
            <label for="email">Email: </label>
            <input type="text" id="email" name="email" placeholder="contato@empresa.com, contato2@empresa.com" class="form-control" required value="{{contrato.email}}"></br>
            <label for="fiscal">Fiscal: </label>
            <input type="text" id="fiscal" name="fiscal" placeholder="Nome dos fiscais do contrato" class="form-control" required value="{{contrato.fiscal}}"></br>
            <label for="status" >Status: </label><br>
            <div class="form-control">
                {{#if contrato.status}}
                    <input type="radio" name="status" value="true" class="radio-inline" checked> Ativo
                    <input type="radio" name="status" value="false" class="radio-inline"> Inativo
                {{else}}
                    <input type="radio" name="status" value="true" class="radio-inline"> Ativo
                    <input type="radio" name="status" value="false" class="radio-inline" checked> Inativo
                {{/if}}            
            </div><br>
            <button type="submit" class="btn btn-success">Editar</button>       
        </form>
    </div>
</div>