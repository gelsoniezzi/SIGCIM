<h2>Requisições</h2>
<hr>

<table style="font-size:13px" class="table table-striped table-bordered table-sm" >
    <thead>
        <tr>
            <th>Numero</th>
            <th>Data</th>
            <th>Itens</th>
            <th>Valor total</th>
            <th>Status</th>
            <th>Prazo</th>
            <th>Solicitante</th>
            <th>Contrato</th>
            <th>Ações</th>
        </tr>
    </thead>
    
    <tbody>
        {{#each requisicoes}}
            <tr>
                <th>{{numero}}</th>
                <th>{{formatDate data_criacao type="short" locale="pt-BR"}}</th>
                <th>{{quantidade_itens}}</th>
                <th>{{formatNumber valor_total style="currency" currency="BRL" locale="pt-BR"}}</th>
                <th>{{status}}</th>
                <th>Calcular</th>
                <th>{{solicitante.nome}}</th>
                <th>{{contrato.numero}}</th>
                <th>Edit, Env, Rem</th>
            </tr>
        {{else}}
            <tr>
                <th><h5>Nenhuma requisição cadastrada.</h5></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        {{/each}}
    </tbody>
    
    <tfoot>
        <tr>
            <th>Numero</th>
            <th>Data</th>
            <th>Itens</th>
            <th>Valor total</th>
            <th>Status</th>
            <th>Prazo</th>
            <th>Solicitante</th>
            <th>Contrato</th>
            <th>Ações</th>
        </tr>
    </tfoot>
</table>
<a href="/requisicoes/add"><button class="btn btn-success">Nova</button></a>