<h2>Requisições</h2>
<div class="card">
    <div class="card-body">
        <table style="font-size:13px" class="table table-striped table-bordered table-sm" >
            <thead class="thead-dark">
                <tr>
                    <th>Data</th>
                    <th>Itens</th>
                    <th>Valor total</th>
                    <th>Status</th>
                    <th>Destino</th>
                    <th>Solicitante</th>
                    <th>Ações</th>
                </tr>
            </thead>    
            <tbody>
                {{#each requisicoes}}
                    <tr>
                        <td>{{date_br data_criacao }}</td>
                        <td>{{quantidade_itens}}</td>
                        <td>{{currency valor_total}}</td>
                        <td>{{status}}</td>
                        <td>{{campus_destino.nome}}</td>
                        <td>{{solicitante.nome}}</td>
                        <td>
                            <a href="/requisicoes/edit/{{_id}}" data-toggle="tooltip" data-placement="top" title="Editar">
                                <i class="material-icons md-18">edit</i>
                            </a>
                            <a href="/requisicoes/gerarOrdem/{{_id}}"  data-toggle="tooltip" data-placement="top" title="Gerar Ordem de Compra">
                                <i class="material-icons md-18">send</i>
                            </a>
                            <a href="/requisicoes/view/{{_id}}"  data-toggle="tooltip" data-placement="top" title="Cancelar">
                                <i class="material-icons md-18">cancel</i>
                            </a> 
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td><h5>Nenhuma requisição cadastrada.</h5></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                {{/each}}
            </tbody>
            
            <tfoot class="thead-dark">
                <tr>
                    <th>Data</th>
                    <th>Itens</th>
                    <th>Valor total</th>
                    <th>Status</th>
                    <th>Campus</th>
                    <th>Solicitante</th>
                    <th>Ações</th>
                </tr>
            </tfoot>
        </table>
        <a href="/requisicoes/add"><button class="btn btn-success">Nova</button></a>                
    </div>
</div>
