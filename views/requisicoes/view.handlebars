<h4>Requisição de Insumos</h4>
{{requisicao}}
<hr>
<div class="card">
    <div class="card-body">
        <h5>Insumos</h5>
        <table id="table-insumos" data-locale="pt-BR" style="font-size:13px" class="table table-striped table-bordered table-sm" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>              
                    <th>Código</th>
                    <th>Descrição</th>
                    <th>Unidade</th>
                    <th>Quant.</th>
                    <th>Preço</th>
                    <th>Total</th>
                    <th >Ações</th>
                </tr>  
            </thead>
            
            <tbody>
                {{#each requisicao.insumos}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{codigo_origem}} </td>
                    <td>{{descricao}}</td>
                    <td>{{unidade}} </td>
                    <td>{{quantidade}} </td>
                    <td>{{currency preco}} </td>
                    <td>{{currency preco_total}}</td>
                    <td>Edit, rem, obs</td>
                </tr>                    
                {{else}}
                {{/each}}

            </tbody>            
        </table>
        <div class="form-row">        
            <div class="col-md-3">
                <label for="criacao">Data de criação: </label>
                    <input type="text" class="form-control" name="criacao" id="" value="{{date_br requisicao.data_criacao}}" disabled>
            </div>
            <div class="col-md-3">
                <label for="envio">Data de envio: </label>
                    <input type="text" class="form-control" name="envio" id="" value="{{date_br requisicao.data_ordem}}" disabled>
            </div>
            <div class="col-md-3">
                <label for="envio">Prazo de entrega: </label>
                    <input type="text" class="form-control" name="envio" id="" value="{{date_br requisicao.prazo_entrega}}" disabled>
            </div>
            <div class="col-md-3">
                <label for="envio">Status: </label>
                    <input type="text" class="form-control" name="status" id="" value="{{requisicao.status}}" disabled>
            </div>
        </div><br>
        <div class="form-row">
            <div class="col-md-4">
                <label for="solicitante">Solicitante: </label>
                    <input type="text" class="form-control" name="solicitante" id="" value="{{requisicao.solicitante.nome}}" disabled>
            </div>
            <div class="col-md-4">
                <label for="contrato">Contrato:</label>
                    <input type="text" class="form-control" name="contrato" id="" value="{{requisicao.contrato.numero}}" disabled>
            </div>
            <div class="col-md-4">
                <label for="destino">Campus de destino:</label>
                    <input type="text" class="form-control" name="destino" id="" value="{{requisicao.campus_destino.nome}}" disabled>
            </div>
        </div><br>

        <label for="observacoes">Observações:</label>
            <textarea class="form-control" name="observacoes" id="" cols="30" rows="3">{{requisicao.observacoes}}
            </textarea><br>
        <div>
            <button class="btn btn-success">Gerar ordem de Compra</button>
            <button class="btn btn-primary">Salvar</button>
        </div>
            

        
    </div>
</div>