<h2>Insumos</h2>
<hr>
total docs: {{result.totalDocs}} <br>
limit: {{result.limit}} <br>
page: {{result.pag}} <br>
totalPages: {{result.totalPages}} <br>
hasNextPage: {{result.hasNextPage}} <br>
nextPage: {{result.nextPage}} <br>
hasPrevPage: {{result.hasPrevPage}} <br>
prevPage: {{result.prevPage}} <br>
paginCounter: {{result.pagingCounter}} <br>
{{result.docs.base}}
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <th scope="col">Origem</th>
        <th scope="col">Código Origem</th>
        <th scope="col">Descrição</th>
        <th scope="col">Un. Medida</th>
        <th scope="col">Preço</th>
        <th scope="col">Status</th>
        <th scope="col">Ações</th>
    </thead>
    <tbody>
        {{#each result.docs}}
        <tr>
            <td>{{origem.nome}}</td>
            <td>{{codigo_origem}}</td>
            <td>{{descricao}}</td>
            <td>{{unidade_medida}}</td>
            <td>{{preco_mediano}}</td>
            <td>{{status}}</td>
            <td>
                <form action="/insumos/delete/" method="POST">
                <a href="/insumos/edit/{{_id}}" class="btn btn-light" data-toggle="tooltip" data-placement="top" title="Editar"><i class="material-icons">edit</i></a>
                <input type="hidden" name="id" value="{{_id}}">                    
                <button class="btn btn-light" type="submit" data-toggle="tooltip" data-placement="top" title="Remover"><i class="material-icons">remove_circle</i></button>
                </form>
            </td>
        </tr>
        {{else}}
            <tr>
                <td><h5>Nenhum insumo cadastrado.</h5></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        {{/each}}
    </tbody>
</table>
<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="/insumos/lista/{{result.prevPage}}">Previous</a></li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="/insumos/lista/{{result.nextPage}}">Next</a></li>
  </ul>
</nav>
<a href="/insumos/add"><button class="btn btn-success">Novo</button></a>