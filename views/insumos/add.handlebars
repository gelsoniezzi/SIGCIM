<h3>Cadastrar insumo</h3>
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/insumos/add" method="POST" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="descricao">Descrição:</label>
                    <input type="text" id="descricao" name="descricao" placeholder="Descrição do ítem." class="form-control" required>
                </div>  
                <div class="form-group col-md-4">
                    <label for="unidade">Unidade de medida: </label>
                    <input type="text" id="unidade" name="unidade" class="form-control" required>
                </div>
            </div>

            <label for="observacao">Observações:</label>
            <input type="text" id="observacao" name="observacao" class="form-control">
            <!-- Apresentar quando a opção de anexar arquivo estiver implementada.
            <div class="custom-file">                
                <input type="file" class="custom-file-input" id="arquivo" name="arquivo">
                <label for="arquivo" class="custom-file-label">Anexar arquivo de imagem (jpg, png, gif) com até 2MB.</label>
            </div>
            -->
            <div class="form-row mt-4">
                <div class="form-group col-md-3">
                    <label for="valor_mediano">Valor mediano: </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">R$</div>
                            </div>
                                <input type="text" id="valor_mediano" name="valor_mediano" class="form-control" >
                        </div>
                
                    <!--<div class="col-auto">
                        <a href="#" class="btn btn-light">Calcular</a>
                    </div>-->
                    
                </div>
                <div class="form-group col-md-6">
                    <label for="origem">Origem: </label>
                    <select required name="origem" class="form-control" >
                        <option value="" selected disabled>Selecione uma base de dados.</option>
                        {{#each bases}}
                        <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                        <option value="0">Nenhuma base cadastrada.</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="codigo_origem">Código de origem:</label>
                    <input type="text" id="codigo_origem" name="codigo_origem" class="form-control" >
                </div>
            </div>
            <!-- //Apresentar quando o anexo de imagens estiver implementado.
            <div class="media">
                <img src="/img/insumos/1560448220405-collage3.webp" class="mr-3" >                
            </div>
            -->            
            <button type="submit" class="btn btn-success mt-4">Salvar</button>
        </form>
    </div>
</div>