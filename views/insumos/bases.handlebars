<h2>Bases de dados</h2>
<hr>
<table class="table table-striped table-striped">
    <thead class="thead-dark">
        <th scope="col">Nome</th>
        <th scope="col">Endereço</th>
        <th scope="col">Ações</th>
    </thead>
    <tbody>
        {{#each bases}}
            <tr>
                <td>{{nome}}</td>
                <td><a href="{{endereco}}" target="_blank">{{endereco}}</a></td>
                <td>                
                <form action="/insumos/bases/delete/" method="POST">
                    <a href="/insumos/bases/edit/{{_id}}" class="btn btn-light" data-toggle="tooltip" data-placement="top" title="Editar"><i class="material-icons">edit</i></a>
                    <input type="hidden" name="id" value="{{_id}}">                    
                    <button class="btn btn-light" type="submit" data-toggle="tooltip" data-placement="top" title="Remover"><i class="material-icons">remove_circle</i></button>
                </form>
            </td>
            </tr>
        {{else}}
            <tr>
                <td><h5>Nenhuma empresa cadastrada.</h5></td>
                <td></td>
                <td></td>
            </tr>
        {{/each}}
    </tbody>
</table>
<a href="/insumos/bases/add"><button class="btn btn-success"> NOVA </button></a>