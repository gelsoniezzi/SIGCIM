<div class="card">
    <div class="card-body">
        <h2>Adicionar categoria</h2>

        <form action="/admin/categorias/add" method="POST">
        <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Insumos, Requisição ou Ordem de Compra" class="form-control" required><br>
        <label for="status">Status: </label>
            <div class="form-control">
                <input type="radio" name="status" value="true" class="radio-inline" checked> Ativo
                <input type="radio" name="status" value="false" class="radio-inline"> Inativo
            </div><br>
            <button type="submit" class="btn btn-success">Criar</button>  
        </form>
    </div>
</div>